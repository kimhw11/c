#pragma warning (disable : 4996)
#include <stdio.h>

int main() {
	int n;
	scanf("%d", &n);
	for (int i = 1;i <= n-1;i++) {

		for (int k = n - 1;k >= i;k--) {
			printf(" ");
		}

		for (int k = 1;k <= 2 * i - 1;k++) {
			printf("*");
		}
		printf("\n");
	}

	for (int i = n;i >= 0;i--) {

		for (int k = n-1;k >= i;k--) {
			printf(" ");
		}

		for (int j = 2 * i - 1;j >= 1;j--) {
			printf("*");
		}
		printf("\n");
	}	

}
