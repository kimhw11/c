#pragma warning (disable : 4996)
#include <stdio.h>

void print_line(int x,int y,int z);

int main(void) {
	int n;
	scanf("%d", &n);

	for (int i = 1;i <= n;i++) {
		print_line(n-i,2*i-1,n-i);
		printf("\n");
	}
}

void print_line(int x, int y, int z) {
	for (int i = 0;i < x;i++) {
		printf(" ");
	}
	for (int k = 0;k < y;k++) {
		printf("*");
	}
	for (int j = 0;j < z;j++) {
		printf(" ");
	}
}
